<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SofaMiniProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/color_primary_default</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/on_color_on_color_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary_default</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/on_color_on_color_secondary</item>
        <!-- Status bar color. -->
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/surface_surface_1</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/surface_surface_1</item>
    </style>

    <style name="Tab" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/Body</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/surface_surface_1</item>
        <item name="tabTextColor">@color/surface_surface_1</item>
    </style>

    <style name="TabDates" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tab_text</item>
        <item name="background">@color/color_primary_variant</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabIndicatorColor">@color/surface_surface_1</item>
    </style>

    <style name="ButtonStyle1" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/Action</item>
        <item name="android:gravity">center</item>
        <item name="strokeColor">@color/color_primary_default</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="colorOutline">@color/color_primary_default</item>
        <item name="textOutlineColor">@color/color_primary_default</item>
        <item name="android:textColor">@color/color_primary_default</item>
        <item name="cornerRadius">1dp</item>
    </style>

    <style name="CustomSpinner" parent="@style/Widget.AppCompat.Spinner">
        <item name="overlapAnchor">true</item>
        <item name="android:background">@drawable/rounded3_bg</item>
    </style>


</resources>