<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/surface_surface_1">

    <ImageView
        android:id="@+id/team_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@+id/team_name"
        app:layout_constraintStart_toStartOf="@+id/team_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_name"
        style="@style/Assistive"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="32dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_logo"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Manchester United" />

</androidx.constraintlayout.widget.ConstraintLayout>