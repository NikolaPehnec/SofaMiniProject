<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/surface_surface_1"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingVertical="12dp">

    <ImageView
        android:id="@+id/position_placeholder"
        android:layout_width="24dp"
        android:background="@drawable/oval_standings_passive_bg"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintBottom_toBottomOf="@+id/position_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/position_placeholder"
        app:layout_constraintStart_toStartOf="@+id/position_placeholder"
        app:layout_constraintTop_toTopOf="@+id/position_placeholder"
        tools:text="1" />

    <TextView
        android:id="@+id/team_name"
        style="@style/Tabular"
        android:layout_width="104dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintBottom_toBottomOf="@+id/position_placeholder"
        app:layout_constraintStart_toEndOf="@id/position_placeholder"
        app:layout_constraintTop_toTopOf="@+id/position_placeholder"
        tools:text="Bundesliga" />

    <TextView
        android:id="@+id/plays"
        style="@style/Tabular"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="1"
        android:textAlignment="center"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/wins"
        app:layout_constraintStart_toEndOf="@+id/team_name"
        app:layout_constraintTop_toTopOf="@id/team_name"
        tools:text="15" />

    <TextView
        android:id="@+id/wins"
        style="@style/Tabular"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/draws"
        app:layout_constraintTop_toTopOf="@id/team_name"
        tools:text="15" />

    <TextView
        android:id="@+id/draws"
        style="@style/Tabular"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/losses"
        app:layout_constraintTop_toTopOf="@id/team_name"
        tools:text="12" />

    <TextView
        android:id="@+id/losses"
        style="@style/Tabular"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/goals"
        app:layout_constraintTop_toTopOf="@id/team_name"
        tools:text="1" />

    <TextView
        android:id="@+id/goals"
        style="@style/Tabular"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/pts"
        app:layout_constraintTop_toTopOf="@id/team_name"
        tools:text="34:6" />

    <TextView
        android:id="@+id/pts"
        style="@style/Tabular"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/team_name"
        tools:text="34" />


</androidx.constraintlayout.widget.ConstraintLayout>