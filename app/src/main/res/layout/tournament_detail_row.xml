<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/tournament_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tournament_name"
        style="@style/Headline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintBottom_toBottomOf="@+id/tournament_logo"
        app:layout_constraintStart_toEndOf="@id/tournament_logo"
        app:layout_constraintTop_toTopOf="@+id/tournament_logo"
        tools:text="Bundesliga" />


</androidx.constraintlayout.widget.ConstraintLayout>