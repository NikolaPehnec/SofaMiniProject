<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingHorizontal="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/manager_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/oval_bg"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/coach_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/coach_label"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/coach"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintStart_toEndOf="@id/manager_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/coach_name"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintBottom_toBottomOf="@id/coach_label"
        app:layout_constraintStart_toEndOf="@id/coach_label"
        app:layout_constraintTop_toTopOf="@id/coach_label"
        tools:text="Hans Zimmerman" />

    <ImageView
        android:id="@+id/country_logo"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintBottom_toBottomOf="@id/manager_img"
        app:layout_constraintStart_toEndOf="@id/manager_img"
        app:layout_constraintStart_toStartOf="@id/coach_label"
        app:layout_constraintTop_toBottomOf="@id/coach_label"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/croatia" />

    <TextView
        android:id="@+id/country_name"
        style="@style/Assistive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/country_logo"
        app:layout_constraintStart_toEndOf="@id/country_logo"
        app:layout_constraintTop_toTopOf="@id/country_logo"
        tools:text="Germany" />

</androidx.constraintlayout.widget.ConstraintLayout>