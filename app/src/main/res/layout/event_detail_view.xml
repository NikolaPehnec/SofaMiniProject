<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/surface_surface_1"
    android:padding="16dp">

    <com.sofaacademy.sofaminiproject.views.customviews.TeamView
        android:id="@+id/team_home"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.sofaacademy.sofaminiproject.views.customviews.TeamView
        android:id="@+id/team_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_date"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/team_away"
        app:layout_constraintStart_toEndOf="@+id/team_home"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15.12.2022." />

    <TextView
        android:id="@+id/event_time"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/team_away"
        app:layout_constraintStart_toEndOf="@+id/team_home"
        app:layout_constraintTop_toBottomOf="@+id/event_date"
        tools:text="18:00" />

    <TextView
        android:id="@+id/score_home"
        style="@style/Headline1Desktop"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:textAlignment="textEnd"
        android:textColor="@color/on_surface_on_surface_lv_1"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/score_slash"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/team_home"
        app:layout_constraintTop_toTopOf="@+id/team_home"
        tools:text="1" />

    <TextView
        android:id="@+id/score_slash"
        style="@style/Headline1Desktop"
        android:layout_width="16dp"
        android:layout_height="40dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="-"
        android:textColor="@color/on_surface_on_surface_lv_1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/score_home"
        app:layout_constraintEnd_toStartOf="@+id/score_away"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/score_home"
        app:layout_constraintTop_toTopOf="@+id/score_home" />

    <TextView
        android:id="@+id/score_away"
        style="@style/Headline1Desktop"
        android:layout_width="56dp"
        android:layout_height="40dp"
        android:layout_marginEnd="7dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/score_home"
        app:layout_constraintEnd_toStartOf="@+id/team_away"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/score_slash"
        app:layout_constraintTop_toTopOf="@+id/team_home"
        tools:text="2" />

    <TextView
        android:id="@+id/match_status"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/on_surface_on_surface_lv_2"
        app:layout_constraintEnd_toEndOf="@+id/score_away"
        app:layout_constraintStart_toStartOf="@+id/score_home"
        app:layout_constraintTop_toBottomOf="@+id/score_slash"
        tools:text="Full Time" />


</androidx.constraintlayout.widget.ConstraintLayout>