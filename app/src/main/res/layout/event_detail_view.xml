<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/surface_surface_1"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <ImageView
        android:id="@+id/team_home_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="@+id/team_home_name"
        app:layout_constraintStart_toStartOf="@+id/team_home_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_home_name"
        style="@style/Assistive"
        android:layout_width="96dp"
        android:text="aaaa"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="32dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_home_logo"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Manchester United" />

    <ImageView
        android:id="@+id/team_away_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/team_away_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/team_away_name"
        style="@style/Assistive"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="32dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_home_logo"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Barcelona" />

    <TextView
        android:id="@+id/event_date"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/team_away_logo"
        app:layout_constraintStart_toEndOf="@+id/team_home_logo"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="15.12.2022." />

    <TextView
        android:id="@+id/event_time"
        style="@style/Micro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/on_surface_on_surface_lv_1"
        app:layout_constraintEnd_toStartOf="@+id/team_away_logo"
        app:layout_constraintStart_toEndOf="@+id/team_home_logo"
        app:layout_constraintTop_toBottomOf="@+id/event_date"
        tools:text="18:00" />


</androidx.constraintlayout.widget.ConstraintLayout>